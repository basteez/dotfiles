[user]
    name = Tiziano Basile
    email = tiz.basile@gmail.com

[core]
    editor = vim 

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    last = log -1 HEAD
    lg = log --oneline --graph --all --decorate
    amend = commit --amend
    undo = reset --soft HEAD~1
    unstage = reset HEAD --
    who = shortlog -sn
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all

[url "git@github.com:"]
    insteadOf = gh:

[url "git@github.com:basteez/"]
    insteadOf = me:

[url "git@github.com:nearform/"]
    insteadOf = nf:
